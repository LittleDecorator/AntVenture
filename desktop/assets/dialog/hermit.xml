<?xml version="1.0"?>

<MyGameResources version="1.0">

    <NPCs>
        <NPC id="hermit">
            <Question ref="what">
                <Answer ref="cook">
                    <Question ref="make">
                        <Answer ref="cook.ok" checker="testCheck" />
                        <Answer ref="cook.no" />
                    </Question>
                </Answer>
                <Answer ref="no" />
            </Question>
        </NPC>
    </NPCs>

    <Questions>
        <Question id="what">
            <text lang="en">What can I do for you?</text>
        </Question>
        <Question id="make">
            <text lang="en">Ok ... How about some pancakes?</text>
        </Question>
    </Questions>
    <Answers>
        <Answer id="cook">
            <text lang="en">Cook me something good!</text>
        </Answer>
        <Answer id="no">
            <text lang="en">Nothing ... your're useless.</text>
        </Answer>
        <Answer id="cook.ok">
            <text lang="en">Sounds great! Thank you.</text>
        </Answer>
        <Answer id="cook.no">
            <text lang="en">I hate pancakes. Go to hell.</text>
        </Answer>
    </Answers>

    <Actions>
        <action id="testSkillCheck" class="com.sample.box.handlers.conditions.Checker" method="test" >
            <!--<param name="location">/UploadFiles</param>-->
        </action>

        <action id="testCheck" class="com.sample.box.handlers.conditions.Checker" method="test" >
            <!--<param name="location">/UploadFiles</param>-->
        </action>
    </Actions>

</MyGameResources>